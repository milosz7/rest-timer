{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
  },
  "include": ["**/*.ts"]
}